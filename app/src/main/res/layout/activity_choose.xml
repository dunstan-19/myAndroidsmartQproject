<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteblue"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/ananda"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_other_user"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/profileInitial"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_other_user"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_gravity="center"
        android:src="@drawable/f" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merienda"
        android:gravity="center"
        android:text="Select a Service to join a queue"
        android:textColor="@color/BROWN"
        android:textSize="20sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="16dp"
        android:rowCount="3">

        <!-- Create Bank Account -->
        <LinearLayout
            android:id="@+id/cardCreateAccount"
            style="@style/ServiceCard"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_card1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/account" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textColor="@color/whiteblue"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Deposit Cash -->
        <LinearLayout
            android:id="@+id/cardDepositCash"
            style="@style/ServiceCard"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_card2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/depositt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deposit Cash"
                android:textColor="@color/whiteblue"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Withdraw Cash -->
        <LinearLayout
            android:id="@+id/cardWithdrawCash"
            style="@style/ServiceCard"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_card3"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/withdraw" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Withdraw Cash"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Check Balance -->
        <LinearLayout
            android:id="@+id/cardCheckBalance"
            style="@style/ServiceCard"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_card4"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/checkbalance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Balance"
                android:textColor="@color/whiteblue"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Helpdesk Services -->
        <LinearLayout
            android:id="@+id/cardHelpdesk"
            style="@style/ServiceCard"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_card5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/helpdesk" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Helpdesk "
                android:textColor="@color/whiteblue"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Other -->
        <LinearLayout
            android:id="@+id/cardOther"
            style="@style/ServiceCard"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_card6"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/other" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textColor="@color/whiteblue"
                android:textSize="16sp" />
        </LinearLayout>

    </GridLayout>

    <Button
        android:id="@+id/btnDone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/violet"
        android:text="Done"
        android:textColor="@android:color/white" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/input_bg"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>
