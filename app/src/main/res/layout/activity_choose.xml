<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_blue"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/ananda"
            android:text="@string/app_name"
            android:textColor="@color/whiteblue"
            android:textSize="23sp" />

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_other_user"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/profileInitial"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_other_user"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_gravity="center"
        android:src="@drawable/f" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merienda"
        android:gravity="center"
        android:text="@string/select_service"
        android:textColor="@color/emerald"
        android:textSize="20sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="16dp"
        android:rowCount="3">

        <!-- Create Bank Account -->
        <LinearLayout
            android:id="@+id/cardCreateAccount"
            style="@style/ServiceCard"
            android:background="@drawable/card_blue_corner"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="20dp"

            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="@string/create_account"
                android:fontFamily="@font/lilitaone"
                android:textStyle="italic"
                android:textColor="@color/gray"
                android:textSize="16sp" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/account" />

        </LinearLayout>

        <!-- Deposit Cash -->

        <LinearLayout
            android:id="@+id/cardDepositCash"
            style="@style/ServiceCard"
            android:layout_margin="8dp"
            android:background="@drawable/card_blue_corner"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deposit_cash"
                android:fontFamily="@font/lilitaone"
                android:textStyle="italic"
                android:textColor="@color/gray"
                android:textSize="16sp" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/depositt" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardWithdrawCash"
            style="@style/ServiceCard"
            android:layout_margin="8dp"
            android:background="@drawable/card_blue_corner"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/withdraw_cash"
                android:fontFamily="@font/lilitaone"
                android:textStyle="italic"
                android:textColor="@color/gray"
                android:textSize="16sp" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/withdraw" />

        </LinearLayout>

        <!-- Check Balance -->
        <LinearLayout
            android:id="@+id/cardCheckBalance"
            style="@style/ServiceCard"
            android:layout_width="148dp"
            android:layout_margin="8dp"
            android:background="@drawable/card_blue_corner"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_balance"
                android:fontFamily="@font/lilitaone"
                android:textStyle="italic"
                android:textColor="@color/gray"
                android:textSize="16sp" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/checkbalance" />

        </LinearLayout>

        <!-- Helpdesk Services -->
        <LinearLayout
            android:id="@+id/cardHelpdesk"
            style="@style/ServiceCard"
            android:layout_margin="8dp"
            android:background="@drawable/card_blue_corner"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/helpdesk"
                android:fontFamily="@font/lilitaone"
                android:textStyle="italic"
                android:textColor="@color/gray"
                android:textSize="16sp" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/helpdesk" />


        </LinearLayout>

        <!-- Other -->
        <LinearLayout
            android:id="@+id/cardOther"
            style="@style/ServiceCard"
            android:layout_margin="8dp"
            android:background="@drawable/card_blue_corner"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other"
                android:fontFamily="@font/lilitaone"
                android:textStyle="italic"
                android:textColor="@color/gray"
                android:textSize="16sp" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/other" />


        </LinearLayout>

    </GridLayout>

    <Button
        android:id="@+id/btnDone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/emerald"
        android:text="@string/done"
        android:textColor="@android:color/white" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/whiteblue"
        app:menu="@menu/bottom_navv_menu" />

</LinearLayout>
